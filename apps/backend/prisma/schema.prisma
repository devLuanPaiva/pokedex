generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Favorite {
  id        Int    @id @default(autoincrement())
  pokemonId String
  name      String
  user      User   @relation(fields: [userId], references: [id])
  userId    Int

  @@map("favorite")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  favorites Favorite[]

  @@map("user")
}
